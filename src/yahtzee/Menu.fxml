<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.171" fx:controller="yahtzee.MenuController">
    <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="1">
        <Label fx:id="title" text=" Yahtzee Rex ! "/>
    </VBox>
    <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.columnSpan="1" GridPane.rowIndex="3">

        <Button fx:id="singlePlayerButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true"
                onAction="#singlePlayer" styleClass="button" text="Singleplayer">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="multiPlayerButton" onAction="#multiPlayer" styleClass="button" text="Multiplayer">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Spinner fx:id="spinner" initialValue="2" max="5" min="2" BorderPane.alignment="CENTER">
        </Spinner>
        <Button fx:id="multiPlayerLaunchButton" onAction="#multiPlayerLaunch" styleClass="button" text="Launch">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>
        <Button fx:id="exitButton" onAction="#exit" styleClass="button" text="Exit">
            <cursor>
                <Cursor fx:constant="HAND"/>
            </cursor>
        </Button>

    </VBox>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
